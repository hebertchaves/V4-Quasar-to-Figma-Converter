{
  "compilerOptions": {
    "target": "es2017",         // Atualizado para ES2017 ou posterior
    "module": "esnext",         // Alterado para 'esnext' conforme recomendado por Rollup
    "lib": ["es2017", "dom"],   // Atualizado para incluir ES2017
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "@figma/plugin-typings",
      "node"                    // Adicionado tipos do Node.js
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}